            fetch('/api/generate_license', {
                method: 'POST',
                headers: {'Content-Type': 'application/json'},
                body: JSON.stringify({
                    customer_name: customer,
                    customer_email: email,
                    days: parseInt(days),
                    type: type,
                    notes: notes
                })
